{
  "name": "electron-test",
  "productName": "Network Tools Hub",
  "version": "1.0.0",
  "description": "Network Tools Hub - A comprehensive network utility suite",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build:dev && electron-forge start",
    "start:dev": "npm run build:dev && electron-forge start",
    "start:prod": "npm run build && electron-forge start",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "rebuild": "electron-rebuild -f -w node-pty",
    "rebuild:all": "./rebuild-native.sh",
    "package": "npm run rebuild && npm run build && electron-forge package",
    "make": "npm run rebuild && npm run build && electron-forge make",
    "make:mac": "npm run rebuild && npm run build && electron-forge make --platform=darwin",
    "make:win": "npm run rebuild && npm run build && electron-forge make --platform=win32",
    "make:linux": "npm run rebuild && npm run build && electron-forge make --platform=linux",
    "make:all": "./build-all-platforms.sh",
    "make:current": "npm run rebuild && npm run build && electron-forge make",
    "dist": "npm run build && electron-forge make",
    "postinstall": "electron-rebuild -f -w node-pty",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "test": "echo \"No tests configured yet\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gioguarin/electron-test.git"
  },
  "keywords": [
    "network",
    "tools",
    "subnet",
    "calculator",
    "electron"
  ],
  "author": "gioguarin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gioguarin/electron-test/issues"
  },
  "homepage": "https://github.com/gioguarin/electron-test#readme",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "css-loader": "^7.1.2",
    "electron": "^37.4.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.34.0",
    "html-webpack-plugin": "^5.6.4",
    "sharp": "^0.34.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "allotment": "^1.20.4",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "fuse.js": "^7.1.0",
    "highlight.js": "^11.11.1",
    "node-pty": "^1.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "telnet-client": "^2.2.6"
  }
}
